//- Стандартный шаблон страницы

include mixins.pug

doctype html
html(lang='ru')

    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
        meta(name='format-detection', content='telephone=no')
        meta(name='format-detection', content='date=no')
        meta(name='format-detection', content='address=no')
        meta(name='format-detection', content='email=no')
        meta(content='notranslate', name='google')

        //- Start of Social Graph Protocol Meta Data
        meta(property="og:locale" content="ru-Ru")
        meta(property="og:type" content="website")
        meta(property="og:title" content="Compas: Carpooling Cyprus")
        meta(property="og:description" content="Driving somewhere? Share your ride and start saving on travel costs!")
        meta(property="og:url" content="https://compas.city")  
        meta(property="og:image" content="https://compas.city/img/og.jpg") 
        meta(property="og:image:width" content="1200") 
        meta(property="og:image:height" content="630") 
        //- End of Social Graph Protocol Meta Data

        //- Фавиконки (https://realfavicongenerator.net)
        link(rel='apple-touch-icon', sizes='180x180', href='/favicon/apple-touch-icon.png')
        link(rel='icon', type='image/png', sizes='32x32', href='/favicon/favicon-32x32.png')
        link(rel='icon', type='image/png', sizes='16x16', href='/favicon/favicon-16x16.png')
        link(rel='manifest', href='/favicon/site.webmanifest')
        link(rel='mask-icon', href='/favicon/safari-pinned-tab.svg', color='#5bbad5')
        link(rel="shortcut icon" href="favicon/favicon.ico")
        meta(name='msapplication-TileColor', content='#5bbad5')
        meta(name="msapplication-config" content="favicon/browserconfig.xml")
        meta(name='theme-color', content='#000')
        meta(name='msapplication-navbutton-color', content='#000')
        meta(name='apple-mobile-web-app-status-bar-style', content='#000')

        //- Google Tag Manager
        script(src="js/gtm.js")

        block meta
            title Compas: Carpooling Cyprus

        block head
            link(rel='stylesheet', href='css/style.min.css')
            //-script
                //-include ../js/head-script.js

    body
        noscript 
            iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-NNFD3VDK" frameborder="0" height="0" width="0" style="display:none;visibility:hidden")
        .wrapper
            block header
                include ../blocks/header/header
            main
                block content
                    p содержимое
            block footer
                include ../blocks/footer/footer
                    p(style='text-align: center') «Подвал»
        block page-bottom
            //-script(src="js/libs.min.js")
            script(src="js/scripts.min.js")
